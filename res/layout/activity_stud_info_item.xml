<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adapter.StudentInformationAdapter" >

    <ImageView
        android:id="@+id/imgbullet"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/bullet_blue" />

    <TextView
        android:id="@+id/txtmessages"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/imgbullet"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/imgbullet"
        android:text="Large Text"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceLarge" />


</RelativeLayout>