<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_otp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.OtpActivity">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/bg_img_home"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Verify your account"
                    android:textColor="@color/bolgque"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textmobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="2dp"
                    android:text="We have sent an OTP to your "
                    android:textColor="@color/bolgque"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/otp1"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/xml_textbox_bg"
                    android:ems="1"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:paddingTop="8dp"
                    android:textAlignment="center"
                    android:textSize="26sp" />

                <EditText
                    android:id="@+id/otp2"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/xml_textbox_bg"
                    android:ems="1"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:paddingTop="8dp"
                    android:textAlignment="center"
                    android:textSize="26sp" />

                <EditText
                    android:id="@+id/otp3"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/xml_textbox_bg"
                    android:ems="1"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:paddingTop="8dp"
                    android:textAlignment="center"
                    android:textSize="26sp" />

                <EditText
                    android:id="@+id/otp4"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/xml_textbox_bg"
                    android:ems="1"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:paddingTop="8dp"
                    android:textAlignment="center"
                    android:textSize="26sp" />

                <EditText
                    android:id="@+id/otp5"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/xml_textbox_bg"
                    android:ems="1"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:paddingTop="8dp"
                    android:textAlignment="center"
                    android:textSize="26sp" />

                <EditText
                    android:id="@+id/otp6"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:background="@drawable/xml_textbox_bg"
                    android:ems="1"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:paddingTop="8dp"
                    android:textAlignment="center"
                    android:textSize="26sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/editOtp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="0000"
                android:inputType="number"
                android:maxLength="4"
                android:padding="15dp"
                android:textSize="28dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnVerify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="35dp"
                android:background="@color/colorPrimary"
                android:text="Verify"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txt_size_eighteen" />
            <!--    <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/bolgque"
                    android:text="Didn't receive the OTP?"
                    android:textSize="15dp" />-->

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="7dp"
                android:gravity="center_horizontal"
                android:text="After 60 seconds you can Resend OTP."
                android:textSize="15dp" />


            <Button
                android:id="@+id/btnResend"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@color/input_summary"
                android:text="Resend OTP"
                android:textColor="@color/SecondaryText"
                android:textSize="16dp" />

            <!--    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="Why are we verifying your account?"
                    android:textColor="#898989"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:text="Security of your account is our top priority. We generally ask users to verify their account if we see a login from a new mobile device. Thanks for your support."
                    android:textColor="#898989"
                    android:textSize="12sp" />-->
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>