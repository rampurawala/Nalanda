<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/xml_textbox_bg"
        android:orientation="horizontal"
        android:visibility="visible">

        <Spinner
            android:id="@+id/spinner_group"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llSpinner"
        android:background="#898989"
        android:visibility="gone">

        <TextView
            android:id="@+id/txtname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.60"
            android:clickable="true"
            android:text="Circular Name"
            android:textColor="@color/list_text_color"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/txtdate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.17"
            android:clickable="true"
            android:text="Date"
            android:textColor="@color/Black"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/txtgroup"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.23"
            android:clickable="true"
            android:text="Group"
            android:textColor="@color/Black"
            android:textSize="17dp" />
        <!--
        </TableRow>
        </TableLayout>
        -->
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/ll_selectall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/White">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White">

            <TextView
                android:id="@+id/txtCircularName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="Select All"
                android:padding="10dp"
                android:textColor="@color/bolgque"
                android:textSize="@dimen/txt_size_eighteen" />

            <CheckBox
                android:id="@+id/checkBoxselectall"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="2dp"
                android:text=""
                android:visibility="visible" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <ListView
        android:id="@+id/lstcirlistnew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/downloadbtn"
        android:layout_below="@+id/ll_selectall"
        android:cacheColorHint="@color/White"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:scrollbars="none"
        android:visibility="visible" />

    <Button
        android:id="@+id/downloadbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:text="Download"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:visibility="gone" />

    <!--<android.support.v7.widget.RecyclerView-->
    <!--android:id="@+id/RecycleView"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:visibility="visible"/>-->

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>