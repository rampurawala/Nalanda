<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llVisitortype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Visitor \'s Type "
                android:textColor="@color/textbg"
                android:textSize="@dimen/txt_size_sixteen"
                android:textStyle="bold" />

            <FrameLayout
                android:id="@+id/fl_visitortype"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/spinner_rounded_bg"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/spnVisitorType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="3dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:background="@null"
                    android:textCursorDrawable="@null" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/down_arrow"
                    android:contentDescription="@string/app_name" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llParents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Parent"
                android:textColor="@color/textbg"
                android:textSize="@dimen/txt_size_sixteen"
                android:textStyle="bold" />

            <FrameLayout
                android:id="@+id/fl_parents"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/spinner_rounded_bg"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/spnParentsType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="3dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:background="@null"
                    android:textCursorDrawable="@null" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/down_arrow"
                    android:contentDescription="@string/app_name" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llGuardian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardian"
                android:textColor="@color/textbg"
                android:textSize="@dimen/txt_size_sixteen"
                android:textStyle="bold" />

            <FrameLayout
                android:id="@+id/fl_guardian"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/spinner_rounded_bg"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/spnGuardianType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="3dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:background="@null"
                    android:textCursorDrawable="@null" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/down_arrow"
                    android:contentDescription="@string/app_name" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llOther"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Other"
                android:textColor="@color/textbg"
                android:textSize="@dimen/txt_size_sixteen"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/fl_other"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/spinner_rounded_bg"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edtOtherType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="5dp"
                    android:textColor="@color/viewname"
                    android:layout_gravity="center_vertical"
                    android:background="@null" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llVisitorname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="6dp"
                    android:layout_weight="1"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Visitor \'s Name"
                        android:textColor="@color/textbg"
                        android:textSize="@dimen/txt_size_sixteen"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:id="@+id/fl_visitorname"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/spinner_rounded_bg"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/edtVisitorName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@null"
                            android:textColor="@color/viewname"
                            android:padding="5dp"/>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llVisitormobileNo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="6dp"
                    android:layout_weight="1"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Visitor \'s Mobile No."
                        android:textColor="@color/textbg"
                        android:textSize="@dimen/txt_size_sixteen"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:id="@+id/fl_visitorMobNo"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/spinner_rounded_bg"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/edtVisitorMolNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:padding="5dp"
                            android:background="@null"
                            android:inputType="number"
                            android:textColor="@color/viewname"
                            android:maxLength="10"/>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lltakePhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:padding="6dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visitor \'s photo"
                    android:textColor="@color/textbg"
                    android:textSize="@dimen/txt_size_sixteen"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/fl_takePhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/spinner_rounded_bg"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="130dp"
                        android:layout_height="140dp"
                        android:padding="3dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:contentDescription="@string/app_name"/>

                    <TextView
                        android:id="@+id/txtcaptureFrom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@color/colorPrimary"
                        android:padding="5dp"
                        android:text="Capture From"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_size_ten" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPurpose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Purpose of Visit"
                android:textColor="@color/textbg"
                android:textSize="@dimen/txt_size_sixteen"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/fl_purpose"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/spinner_rounded_bg"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edtPurpose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/viewname"
                    android:padding="5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@null" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llWhomToMeet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Whom To Meet"
                android:textColor="@color/textbg"
                android:textSize="@dimen/txt_size_sixteen"
                android:textStyle="bold" />

            <FrameLayout
                android:id="@+id/fl_WhomToMeet"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/spinner_rounded_bg"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/spnWhomToMeet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="3dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:background="@null"
                    android:textCursorDrawable="@null" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/down_arrow"
                    android:contentDescription="@string/app_name" />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txtNextbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:text="Next"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_size_sixteen"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
