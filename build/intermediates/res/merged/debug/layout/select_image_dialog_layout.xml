<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardPreventCornerOverlap="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/llselect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtadd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Select File Type"
                        android:textColor="@color/textbg"
                        android:textSize="@dimen/txt_size_eighteen"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lineview2"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@+id/txtadd"
                        android:layout_marginBottom="15dp"
                        android:background="@color/list_divider"
                        android:visibility="visible" />

                    <RelativeLayout
                        android:id="@+id/llcamera"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtadd"
                        android:padding="5dp">


                        <TextView
                            android:id="@+id/txtgallery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:padding="10dp"
                            android:text="Select PDF"
                            android:textColor="@color/textbg"
                            android:textSize="@dimen/txt_size_eighteen" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/lineview1"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@+id/llcamera"
                        android:background="@color/divider_bg"
                        android:padding="6dp"
                        android:visibility="visible" />

                    <RelativeLayout
                        android:id="@+id/llgallery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/llcamera"
                        android:padding="5dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:padding="6dp"
                            android:text="Select Photo from Gallery"
                            android:textColor="@color/textbg"
                            android:textSize="@dimen/txt_size_eighteen" />

                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/lineview"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/llselect"
                    android:background="@color/divider_bg"
                    android:padding="10dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/btnCancle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lineview"
                    android:layout_centerInParent="true"
                    android:layout_margin="10dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Cancel"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_eighteen"
                    android:textStyle="bold" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </FrameLayout>
</RelativeLayout>


