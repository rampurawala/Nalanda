<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/notice_banner_height">

    <LinearLayout
        android:id="@+id/ll_MainView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White"
        android:clickable="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/txtCircularName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/textbg"
                android:textSize="@dimen/txt_size_sixteen" />
            <TextView
                android:id="@+id/txtGroupName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtCircularName"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/textbg"
                android:textSize="@dimen/txt_size_sixteen" />

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/txtGroupName"
                android:layout_marginTop="3dp"
                android:gravity="end"
                android:text=""
                android:textColor="@color/textbg"
                android:textSize="@dimen/txt_size_twelve" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>