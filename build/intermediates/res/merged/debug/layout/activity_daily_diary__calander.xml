<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/maindailydairy"
    android:background="@color/main_bg">
    <LinearLayout
        android:id="@+id/empty_daily_dairy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_folder_open_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Empty"
            android:textColor="#A8A8A8"
            android:textSize="18sp" />
    </LinearLayout>
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/mainNestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:fillViewport="true"
        android:visibility="gone"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/buttonlayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <TextView
                    android:id="@+id/selectedDayMonthYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/round_corner_textview_bg_gray"
                    android:padding="5dp"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/txt_size_sixteen"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TableLayout
                android:id="@+id/dayname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buttonlayout"
                android:layout_marginBottom="0.2dp"
                android:paddingBottom="12dp"
                android:shrinkColumns="*"
                android:stretchColumns="*"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lbl_s"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="S"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/txt_size_twelve"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lbl_m"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="M"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/txt_size_twelve"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lbl_tu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="T"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/txt_size_twelve"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lbl_w"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="W"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/txt_size_twelve"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lbl_th"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="T"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/txt_size_twelve"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lbl_f"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="F"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/txt_size_twelve"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lbl_sa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="S"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/txt_size_twelve"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>

            <com.expedite.apps.nalanda.common.ExpandableHeightGridView
                android:id="@+id/calendar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/dayname"
                android:background="@color/white"
                android:numColumns="7"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:verticalSpacing="0.2dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

            <com.expedite.apps.nalanda.common.ExpandableHeightGridView
                android:id="@+id/gv_month"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/calendar"
                android:layout_marginTop="10dp"
                android:horizontalSpacing="5dp"
                android:numColumns="3"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

            <RelativeLayout
                android:id="@+id/relativeCalendarEvents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gv_month"
                android:layout_marginTop="10dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/eventRecyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/gv_month" />
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/Progressbar1"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>