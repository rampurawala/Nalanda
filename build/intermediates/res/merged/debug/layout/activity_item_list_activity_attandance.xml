<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutlenear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.expedite.apps.nalanda.adapter.AttandanceListAdapter" >

    <ImageView
        android:id="@+id/img_bullet"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/bullet_blue1" />

    <TextView
        android:id="@+id/txt_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/img_bullet"
        android:gravity="center_vertical"
        android:text=""
        android:textColor="@color/list_text_color"
        android:textSize="20dp" />
    
    <!-- android:layout_alignLeft="@+id/txt_msg" -->

    <TextView
        android:id="@+id/txt_values"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:gravity="center_vertical"
        android:text=""
        android:textColor="@color/list_text_color"
        android:textSize="20dp" />

</RelativeLayout>