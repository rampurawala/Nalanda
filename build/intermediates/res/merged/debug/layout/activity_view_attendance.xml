<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutlenear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewAttendance" >

    
    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:text="Attendance Report of Academic Year"
        android:textColor="@color/Black"
        android:textSize="20dp" />

    <ListView
        android:id="@+id/lstdisplayattendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_header"
        android:layout_above="@+id/tvmarkqueetextdisplayattendance"
        android:layout_marginTop="15dp"
        android:cacheColorHint="@color/White"
        android:choiceMode="singleChoice" >
    </ListView>

    
    
    <TextView
        android:id="@+id/tvmarkqueetextdisplayattendance"
        android:layout_width="300dp"
        android:layout_height="21dp"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentBottom="true"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"
        android:focusable="true"
        android:textColor="@color/Black"
        android:focusableInTouchMode="true"
        android:lines="1"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:text="Last Updated Time:31 Juanuary" />

    
</RelativeLayout>